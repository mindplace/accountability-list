<h1>sign up</h1>

<form id="user-password-form" action="/users" method="post">

  <% if @errors %>
    <%= erb :'_errors', layout: false, locals: { errors: @errors } %>
  <% end %>
  <input id="form-name" type="text" name="user[name]" placeholder="name"><br>
  <input id="form-username" type="text" name="user[username]" placeholder="username"><br>
  <input id="form-password" type="password" name="user[password]" placeholder="password"><br>
  <input id="form-submit" type="submit" value="create account">
</form>
